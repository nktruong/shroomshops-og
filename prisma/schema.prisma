generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Shop {
  id              Int       @id @default(autoincrement())
  owner           String
  name            String    @unique
  slug            String    @unique
  description     String
  image           String    @unique
  products        Product[]
  conversionRates String
  coordinates     String
}

model Product {
  id       Int     @id @default(autoincrement())
  item     String
  price    String
  image    String
  shop     Shop    @relation(fields: [shopSlug], references: [slug])
  shopSlug String
  inStock  Boolean
}

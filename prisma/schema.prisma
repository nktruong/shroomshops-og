// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Shop {
  id          Int       @id @default(autoincrement())
  owner       String
  name        String
  description String
  products    Product[]
}

model Product {
  id     Int    @id @default(autoincrement())
  item   String
  price  String
  shop   Shop   @relation(fields: [shopId], references: [id])
  shopId Int
}

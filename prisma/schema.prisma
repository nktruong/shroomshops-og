// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Shop {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  owner       String
  name        String    @unique
  description String
  products    Product[]
}

model Product {
  id       Int    @id @default(autoincrement())
  item     String
  price    String
  shop     Shop   @relation(fields: [shopSlug], references: [slug])
  shopSlug String
}
